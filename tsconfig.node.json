{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true
  },
  "baseUrl": "./src",
  "paths": {
    "@components/*": ["./components/*"],
    "@constants/*": ["./constants/*"],
    "@interfaces/*": ["./interfaces/*"],
    "@common/*": ["./common/*"],
    "@hooks/*": ["./hooks/*"],
    "@assets/*": ["./assets/*"],
    "@pages/*": ["./pages/*"],
    "@store/*": ["./store/*"],
    "@ui/*": ["./ui/*"],
    "@helpers/*": ["./helpers/*"]
  },
  "include": ["vite.config.ts"]
}
